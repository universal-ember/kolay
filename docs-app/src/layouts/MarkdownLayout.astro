---
import BaseLayout from './BaseLayout.astro';
import '../styles/app.css';
import { loadManifest } from '../utils/loadManifest';
import type { Collection, Page } from '../../../src/types';

interface Props {
  title?: string;
  frontmatter?: {
    title?: string;
  };
}

const { title, frontmatter } = Astro.props;
const pageTitle = frontmatter?.title || title || 'Docs';

// Load manifest to generate navigation
const manifest = await loadManifest();

// Determine which group/tab the current page belongs to
const currentPath = Astro.url.pathname;
let currentGroup = 'root';
for (const group of manifest.groups) {
  if (group.name === 'root') continue;
  if (currentPath.startsWith(`/${group.name}`)) {
    currentGroup = group.name;
    break;
  }
}

// Helper function to render navigation recursively
function renderNavItem(item: Page | Collection, depth = 0): string {
  if ('groupName' in item) {
    // It's a Page
    const page = item as Page;
    return `<li><a href="${page.path}">${page.cleanedName || page.name}</a></li>`;
  } else {
    // It's a Collection
    const collection = item as Collection;
    const childrenHtml = collection.pages.map(child => renderNavItem(child, depth + 1)).join('');
    return `<li>${collection.name}<ul>${childrenHtml}</ul></li>`;
  }
}
---

<BaseLayout title={pageTitle}>
  <div class="container">
    <header style="display: flex; align-items: baseline; gap: 1rem; border-bottom: 1px solid currentColor; justify-content: space-between;">
      <h1>Kolay Docs</h1>
      <button class="mobile-menu-toggle" aria-label="Toggle navigation menu">
        â˜°
      </button>
    </header>

    <!-- Top Navigation Tabs - generated from manifest -->
    <nav class="top-nav">
      {manifest.groups.map(group => {
        const isActive = currentGroup === group.name;
        const firstPage = group.list[0];
        const href = firstPage ? firstPage.path : `/${group.name}`;
        const displayName = group.name === 'root' ? 'Usage' : group.name;
        return (
          <a 
            href={href}
            class={`tab-button ${isActive ? 'active' : ''}`}
            data-group={group.name}>
            {displayName}
          </a>
        );
      })}
    </nav>

    <div class="big-layout">
      <aside class="sidebar">
        <nav>
          {manifest.groups.map(group => {
            const isActive = currentGroup === group.name;
            const navHtml = group.tree.pages.map(item => renderNavItem(item)).join('');
            return (
              <div class={`nav-group ${isActive ? 'active' : ''}`} data-nav={group.name}>
                <ul set:html={navHtml} />
              </div>
            );
          })}
        </nav>
      </aside>

      <main style="padding-top: 1rem;">
        <slot />
      </main>
    </div>
  </div>

  <style>
    .mobile-menu-toggle {
      display: none;
      background: transparent;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      padding: 0.5rem;
      color: var(--pico-color);
    }

    .top-nav {
      display: flex;
      gap: 0;
      margin-top: 1rem;
      margin-bottom: 1rem;
      border-bottom: 2px solid var(--pico-muted-border-color);
    }

    .tab-button {
      background: transparent;
      border: none;
      border-bottom: 3px solid transparent;
      padding: 0.75rem 1.5rem;
      cursor: pointer;
      font-size: 1rem;
      transition: all 0.2s;
      color: var(--pico-color);
      margin-bottom: -2px;
      text-decoration: none;
      display: inline-block;
    }

    .tab-button:hover {
      background: var(--pico-primary-hover-background);
    }

    .tab-button.active {
      border-bottom-color: var(--pico-primary);
      font-weight: bold;
    }

    .nav-group {
      display: none;
    }

    .nav-group.active {
      display: block;
    }

    .big-layout {
      display: grid;
      grid-template-columns: max-content 1fr;
      gap: 2rem;
    }

    .big-layout main {
      max-width: 100%;
      display: flex;
      flex-direction: column;
      overflow-x: hidden;
    }

    .big-layout nav ul {
      padding-left: 0.5rem;
      list-style: none;
      line-height: 1.75rem;
    }

    aside {
      min-width: 200px;
    }

    @media (max-width: 768px) {
      .mobile-menu-toggle {
        display: block;
      }

      .big-layout {
        grid-template-columns: 1fr;
      }

      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 80%;
        max-width: 300px;
        height: 100vh;
        background: var(--pico-background-color);
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        z-index: 1000;
        overflow-y: auto;
        padding: 1rem;
      }

      .sidebar.mobile-open {
        transform: translateX(0);
      }

      .mobile-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      }

      .mobile-overlay.active {
        display: block;
      }

      .top-nav {
        flex-wrap: wrap;
      }

      .tab-button {
        flex: 1;
        min-width: 100px;
        text-align: center;
        padding: 0.5rem 0.75rem;
        font-size: 0.9rem;
      }
    }
  </style>

  <div class="mobile-overlay"></div>

  <script>
    // Handle mobile menu toggle
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      const sidebar = document.querySelector('.sidebar');
      const overlay = document.querySelector('.mobile-overlay');

      function closeMobileMenu() {
        sidebar?.classList.remove('mobile-open');
        overlay?.classList.remove('active');
      }

      function openMobileMenu() {
        sidebar?.classList.add('mobile-open');
        overlay?.classList.add('active');
      }

      menuToggle?.addEventListener('click', () => {
        if (sidebar?.classList.contains('mobile-open')) {
          closeMobileMenu();
        } else {
          openMobileMenu();
        }
      });

      overlay?.addEventListener('click', closeMobileMenu);

      // Close mobile menu when clicking a link
      const navLinks = sidebar?.querySelectorAll('a');
      navLinks?.forEach(link => {
        link.addEventListener('click', closeMobileMenu);
      });
    });
  </script>
</BaseLayout>

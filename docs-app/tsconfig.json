{
  "extends": "@ember/app-tsconfig",
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "compilerOptions": {
    // stylistic
    "noPropertyAccessFromIndexSignature": false,
    "types": [
      "ember-source/types",
      "kolay/virtual",
      "vite/client",
      "vitest/importMeta",
      "unplugin-info/client"
    ]
  }
}
